<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.example.ashkan.a531.Model.Week"/>
        <import type="java.util.List"/>
        <import type="com.jjoe64.graphview.series.LineGraphSeries"/>
        <import type="com.jjoe64.graphview.series.DataPointInterface"/>

        <variable
            name="listOfWeeks"
            type="List&lt;Week>"/>
        <variable
            name="numberOfExercises"
            type="int"/>
        <!--
        <variable
            name="listOfSeries"
            type="List&lt;LineGraphSeries&lt;DataPointInterface>>"/>
            type="com.jjoe64.graphview.series.DataPoint[][]"/> -->
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.ashkan.a531.Fragments.GraphFragment">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="9"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/graph_fragment_fab"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/graph_fragment_fab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_black_24dp"
            app:fabSize="mini"
            android:layout_margin="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>
